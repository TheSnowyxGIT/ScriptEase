{
  "name": "scriptease",
  "version": "1.0.0",
  "description": "ScriptEase is a powerful tool that allows for easy management and execution of npm scripts, written in JavaScript, on any operating system, enabling the creation of complex scripts",
  "main": "./dist/src/public/pubScriptEase.js",
  "types": "./dist/src/public/pubScriptEase.d.ts",
  "files": ["dist/**/*"],
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "test": "ts-mocha test/**/*.spec.ts test/*.spec.ts",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "npm",
    "scripts",
    "management",
    "JavaScript",
    "execution",
    "operating",
    "system",
    "complex",
    "powerful",
    "easy",
    "tool"
  ],
  "author": "adrien pingard",
  "license": "MTI",
  "dependencies": {
    "chalk": "^4.1.2",
    "file-url": "^4.0.0",
    "fs-extra": "^11.1.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "@types/yargs": "^17.0.19",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  }
}

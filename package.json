{
  "name": "scriptease",
  "version": "1.0.0",
  "description": "ScriptEase is a powerful tool that allows for easy management and execution of npm scripts, written in JavaScript, on any operating system, enabling the creation of complex scripts",
  "main": "./dist/src/public/pubScriptEase.js",
  "types": "./dist/src/public/pubScriptEase.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "ts-mocha test/**/*.spec.ts test/*.spec.ts",
    "cover": "nyc npm run test",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --ext .ts src/",
    "precommit": "npm run format",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "keywords": [
    "npm",
    "scripts",
    "management",
    "JavaScript",
    "execution",
    "operating",
    "system",
    "complex",
    "powerful",
    "easy",
    "tool"
  ],
  "author": "adrien pingard",
  "license": "MTI",
  "dependencies": {
    "chalk": "^4.1.2",
    "file-url": "^4.0.0",
    "fs-extra": "^11.1.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "@types/yargs": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.34.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
